<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:paddingBottom="10dp"
    android:paddingLeft="16dp"
    android:paddingTop="10dp"
    android:paddingRight="16dp"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="1dp"
    android:background="#ffffff"
    >

    <ImageView
        android:id="@+id/audioIndicator"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@mipmap/ic_with_no_sound"
        />

    <TextView
        android:id="@+id/dreamTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/audioIndicator"
        android:fontFamily="sans-serif-medium"
        android:textColor="#333333"
        android:textSize="15dp"
        android:text="Tytuł/nazwa jednego ze snów"
        android:layout_marginRight="10dp"
        />

    <TextView
        android:id="@+id/dreamDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/dreamTitle"
        android:layout_toRightOf="@+id/dreamTitle"
        android:fontFamily="sans-serif-medium"
        android:text="12.12.2019r."
        android:textColor="#333333"
        android:textSize="12dp"
        android:textStyle="italic"
        android:paddingBottom="2dp"/>

    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dreamTitle"
        android:layout_toRightOf="@+id/audioIndicator"
        android:textColor="#8c8c8c"
        android:textSize="12dp"
        android:text="tagPierwszy, tagDrugi, tagTrzeci, itd..."
        />

</RelativeLayout>